            try {
                const token = localStorage.getItem('token');
                const response = await fetch(`/api/web/leads/${currentLead._id}/notes`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify({ note: noteContent })
                });

                const data = await response.json();

                if (data.success) {
                    document.getElementById('newNote').value = '';
                    viewLead(currentLead._id); // Refresh the modal
                    showToast('Note added successfully!', 'success');
                } else {
                    throw new Error(data.error || 'Failed to add note');
                }
            } catch (error) {
                showToast('Error: ' + error.message, 'error');
            }
        }

        async function setFollowUp() {
            console.log('=== setFollowUp function called! ===');

            const daysInput = document.getElementById('followUpDays');
            const notesInput = document.getElementById('followUpNotes');

            console.log('Days input element:', daysInput);
            console.log('Notes input element:', notesInput);

            if (!daysInput || !notesInput) {
                console.error('Input elements not found!');
                showToast('Error: Input fields not found', 'error');
                return;
            }

            const days = parseInt(daysInput.value);
            const notes = notesInput.value.trim();

            console.log('Days:', days, 'Notes:', notes);
            console.log('Current lead:', currentLead);

            if (!days || days < 1) {
                console.log('Invalid days, showing warning');
                showToast('Please enter a valid number of days', 'warning');
                return;
            }

            if (!currentLead || !currentLead._id) {
                console.error('No current lead selected!');
                showToast('Error: No lead selected', 'error');
                return;
            }

            try {
                console.log('Making API call...');
                const token = localStorage.getItem('token');
                console.log('Token:', token ? 'Found' : 'Not found');

                const requestBody = { days, notes };
                console.log('Request body:', requestBody);
                console.log('Lead ID:', currentLead._id);

                const response = await fetch(`/api/web/leads/${currentLead._id}/followup`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
