    <script>
        let currentLead = null;
        let statusChart = null;
        let trendsChart = null;

        // Check authentication on page load
        document.addEventListener('DOMContentLoaded', function () {
            const token = localStorage.getItem('token');
            const user = JSON.parse(localStorage.getItem('user') || '{}');

            // Set up event listeners to replace inline onclick handlers
            setupEventListeners();

            if (!token) {
                window.location.href = '/login';
                return;
            }

            document.getElementById('userName').textContent = user.name || 'Agent';
            loadDashboard();
            setupSocket();
        });

        function setupSocket() {
            const socket = io();

            socket.on('connect', () => {
                console.log('Connected to socket server');
            });

            socket.on('lead:update', (data) => {
                const { type, lead } = data;
                console.log('Received lead update:', type, lead);

                // Show toast notification
                const msg = type === 'create'
                    ? `New Lead: ${lead.name}`
                    : `Lead Updated: ${lead.name}`;
                showToast(msg, 'info'); // Using existing showToast function 'info' type (blue)

                // Refresh dashboard data
                loadDashboard();
            });
        }

        async function loadDashboard() {
            try {
                const token = localStorage.getItem('token');
                const response = await fetch('/api/web/dashboard', {
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });

                if (!response.ok) {
                    throw new Error('Failed to load dashboard');
                }

                const data = await response.json();

                if (data.success) {
                    updateStats(data.stats, data.leads);
                    updateLeadsTable(data.leads);
                }
            } catch (error) {
                console.error('Error loading dashboard:', error);
                if (error.message.includes('401')) {
                    localStorage.removeItem('token');
                    localStorage.removeItem('user');
                    window.location.href = '/login';
                } else {
                    showToast('Error loading dashboard', 'error');
                }
            }
        }

        function setupEventListeners() {
            // Logout button
            const logoutBtn = document.querySelector('[data-action="logout"]');
            if (logoutBtn) {
                logoutBtn.addEventListener('click', logout);
            }

            // Create lead button
            const createLeadBtn = document.querySelector('[data-action="create-lead"]');
            if (createLeadBtn) {
                createLeadBtn.addEventListener('click', openCreateLeadModal);
            }

            // Refresh button
            const refreshBtn = document.querySelector('[data-action="refresh"]');
            if (refreshBtn) {
                refreshBtn.addEventListener('click', loadDashboard);
            }

            // Close modal buttons
            // Close modal buttons - UPDATED to handle multiple buttons
            document.querySelectorAll('[data-action="close-create-modal"]').forEach(btn => {
                btn.addEventListener('click', closeCreateLeadModal);
            });

            document.querySelectorAll('[data-action="close-detail-modal"]').forEach(btn => {
                btn.addEventListener('click', closeLeadDetailModal);
            });

            document.querySelectorAll('[data-action="close-edit-modal"]').forEach(btn => {
                btn.addEventListener('click', closeEditLeadModal);
            });

            // Add note button
            const addNoteBtn = document.querySelector('[data-action="add-note"]');
            if (addNoteBtn) {
                addNoteBtn.addEventListener('click', addNote);
            }

            // Set follow-up button - removed from here since it's set up in viewLead function

            // Event delegation for dynamic buttons in table rows
            document.addEventListener('click', function (e) {
                console.log('Click event:', e.target, e.target.className);

                if (e.target.matches('.view-lead-btn') || e.target.closest('.view-lead-btn')) {
                    const button = e.target.matches('.view-lead-btn') ? e.target : e.target.closest('.view-lead-btn');
                    const leadId = button.getAttribute('data-lead-id');
                    console.log('View lead clicked:', leadId);
                    viewLead(leadId);
                } else if (e.target.matches('.edit-lead-btn') || e.target.closest('.edit-lead-btn')) {
                    const button = e.target.matches('.edit-lead-btn') ? e.target : e.target.closest('.edit-lead-btn');
                    const leadId = button.getAttribute('data-lead-id');
                    console.log('Edit lead clicked:', leadId);
                    editLead(leadId);
                } else if (e.target.matches('[data-action="close-toast"]') || e.target.closest('[data-action="close-toast"]')) {
                    const button = e.target.matches('[data-action="close-toast"]') ? e.target : e.target.closest('[data-action="close-toast"]');
                    const toastId = button.getAttribute('data-toast-id');
                    closeToast(toastId);
                }
            });
        }

        function updateStats(stats, leads = []) {
            document.getElementById('totalLeads').textContent = stats.total;
            document.getElementById('qualifiedLeads').textContent = stats.qualified;
            document.getElementById('contactedLeads').textContent = stats.contacted;
            document.getElementById('closedLeads').textContent = stats.closed;

            // Update charts
            updateCharts(stats, leads);
        }

        function updateCharts(stats, leads) {
            // Check if Chart.js is loaded
            if (typeof Chart === 'undefined') {
                console.warn('Chart.js not loaded, showing fallback display');
                showChartFallback(stats);
                return;
            }

            // Status Distribution Chart
            if (statusChart) {
                statusChart.destroy();
            }

            const statusCtx = document.getElementById('statusChart').getContext('2d');
            statusChart = new Chart(statusCtx, {
                type: 'doughnut',
                data: {
                    labels: ['New', 'Contacted', 'Qualified', 'Proposal Sent', 'Closed', 'Lost'],
                    datasets: [{
                        data: [stats.new, stats.contacted, stats.qualified, stats.proposal_sent, stats.closed, stats.lost],
                        backgroundColor: [
                            '#6366f1', // Primary Accent (Indigo)
                            '#334155', // Hover (Dark Gray)
                            '#475569', // Slate 600
                            '#64748b', // Slate 500
                            '#94a3b8', // Slate 400
                            '#cbd5e1'  // Slate 300
                        ],
                        borderWidth: 0,
                        borderColor: 'transparent'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 20,
                                usePointStyle: true
                            }
                        }
                    }
                }
            });

            // Monthly Trends Chart (simulated data for now)
            if (trendsChart) {
                trendsChart.destroy();
            }

            // Process leads for monthly trends (Last 6 Months)
            const today = new Date();
            const monthlyLabels = [];
            const newLeadsData = new Array(6).fill(0);
            const closedLeadsData = new Array(6).fill(0);

            // Generate labels for last 6 months
            for (let i = 5; i >= 0; i--) {
                const d = new Date(today.getFullYear(), today.getMonth() - i, 1);
                monthlyLabels.push(d.toLocaleString('default', { month: 'short' }));
            }

            // Aggregate data if leads exist
            if (leads && leads.length > 0) {
                leads.forEach(lead => {
                    const createdDate = new Date(lead.createdAt);
                    const monthDiff = (today.getFullYear() - createdDate.getFullYear()) * 12 + (today.getMonth() - createdDate.getMonth());

                    if (monthDiff >= 0 && monthDiff < 6) {
                        const index = 5 - monthDiff;
                        newLeadsData[index]++;
                        if (lead.status === 'closed') closedLeadsData[index]++;
                    }
                });
            }

            const trendsCtx = document.getElementById('trendsChart').getContext('2d');
            trendsChart = new Chart(trendsCtx, {
                type: 'line',
                data: {
                    labels: monthlyLabels,
                    datasets: [{
                        label: 'New Leads',
                        data: newLeadsData,
                        borderColor: '#6366f1', // Indigo 500
                        backgroundColor: 'rgba(99, 102, 241, 0.1)',
                        tension: 0.4,
                        fill: true
